@using Building.Domain.Entity;
@model Building.Helper.WordDocument;

<style>
    label {
        padding-left: 15px;
        font-size: medium;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=text]:focus {
            border: 3px solid #1E90FF;
        }

    input[type=date] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=date]:focus {
            border: 3px solid #1E90FF;
        }

    input[type=file] {
        width: 100%;
        height: auto;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=file]:focus {
            border: 3px solid #1E90FF;
        }

    #back {
        position: relative;
        top: 30px
    }

    #title {
        position: relative;
        left: 190px
    }
    .input{
        width: 20px;
        height: 20px;
        position:relative;
        top:5px;
        
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-10">
            <form asp-action="GetSnabQueries" method="get">
                <div class="row">

                    <div class=" col-10 form-outline ">
                        <input type="search" class="form-control form-control-lg" placeholder="Найти заявку" value="@ViewBag.Search" name="search" aria-label="Найти" />
                    </div>
                    <div class="col">
                        <button class="btn btn-outline-primary border border-primary" type="submit" id="searchbutton">Найти</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
    <hr />
    <h3 class="display-6 text-center">Создать документ</h3>
    <br />

    <div class="row">

        

        <div>
            
            <form asp-action="CreateDoc" asp-controller="Snab"  method="post">
                <div style="margin: 15px;">

                    
                    <div class="row">

                        <div class="col">

                            @*<input type="hidden" asp-for="" />*@
                            <p>
                                <label asp-for="SuplyerName">Поставщик</label><br />
                                <input type="text" name="SuplyerName" />
                            </p>
                        </div>
                        <div class="col">

                            <p>
                                <label asp-for="SuplyerINN">ИНН</label><br />
                                <input type="text" name="SuplyerINN" />
                            </p>
                        </div>
                        <div class="col">

                            <p>
                                <label asp-for="SuplyerKPP">КПП</label><br />
                                <input type="text" name="SuplyerKPP" />
                            </p>
                        </div>
                        <div class="col">

                            <p>
                                <label asp-for="ResponseDate">Срок подачи предложения</label><br />
                                <input type="date" name="ResponseDate" />
                            </p>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="ResponseDate">Email поставщика </label><br />
                            <input type="text" name="Recipient" />
                        </div>
                        <div class="col text-start">
                            <br />
                            <br />
                            <label asp-for="IsSendEmail">Отправить на почту</label>&nbsp;
                            <input name="IsSendEmail" class="input" asp-for="@Model.IsSendEmail" />
                        </div>
                    </div>
                    <br />
                    <table class="table" id="myTable">
                        <thead>
                            <tr>
                                <th class="text-center" scope="col"><input type="checkbox" class="form-check-input" name="allcheck" id="selectAll" /></th>
                                <th class="text-center" scope="col">Каталог</th>
                                <th class="text-center" scope="col">Материал</th>
                                <th class="text-center" scope="col">Номенклатура</th>
                                <th class="text-center" scope="col">Количество</th>
                                <th class="text-center" scope="col">Ед.измерения</th>
                                <th class="text-center" scope="col">Дата доставки</th>
                                
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.QueryDetails)
                            {
                                <tr class="text-center">
                                    <th class="text-center pt-4"><input type="checkbox" class="form-check-input chkCheckBoxId" value="@item.ID" name="queryDetailId" /></th>
                                    <th class="text-center pt-4">@item.Material.Catalog.Name</th>
                                    <th class="text-center pt-4">@item.Material.Name</th>
                                    <th class="text-center pt-4">@item.Name</th>
                                    <th class="text-center pt-4">@item.Count</th>
                                    <th class="text-center pt-4">@item.Measure</th>
                                    <th class="text-center pt-4">@item.Query.Deadline</th>                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <p class="text-center">
                        <input type="submit" class="btn btn-outline-primary border border-1 border-primary" value="Создать" />
                    </p>
                </div>
            </form>
        </div>
    </div>

</div>