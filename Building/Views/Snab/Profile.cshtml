@using System.Security.Claims;

@model Building.Domain.ViewModel.ProfileVIewModel


<div class="container-fluid">

    <h2 class="display-5 text-center">Профиль</h2>

    <hr class="border border-primary border-3 opacity-75">

    <br />
    <div class="border border-2 border-primary rounded-2">
        <br/>
        <div class="row">
            <div class="col-1"></div>
            <div class="col-6">
                <h2 class="text-black">
                    Фамилия - <strong>@Model.SecondName</strong>
                </h2>

                <h2 class="display-7 text-black">
                    Имя - <strong>@Model.Name</strong>
                </h2>

                <h2 class="text-black">
                    Отчество - <strong>@Model.MiddleName</strong>
                </h2>

                <h2 class="text-black">
                    Дата рождения - <strong>@Model.Birthday</strong>
                </h2>

                <h2 class="text-black">
                    Телефон - <strong>@Model.Phone</strong>
                </h2>

                <h2 class="text-black">
                    Должность - <strong>@Model.Position</strong>
                </h2>
            </div>
            <div class="col">
            
                @if (Model.Photo != null)
                {
                    <p class="text-center">
                        <img style='width:300px; height:300px;' class="rounded rounded-2 mx-auto d-block pt-4" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" />
                    </p>

                }
                else
                {
                    <p>
                        <img style='width:300px; height:320px;' class="rounded mx-auto d-block pt-4" src="~/Images/nophoto.png" />
                    </p>
                }
            </div>
       

            <form method="get">
                <br/>
                <br/>
                <p class="text-center">
                    <button class="btn btn-outline-primary border border-1 border-primary"  asp-action="ProfileEdit" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>  Редактировать
                    </button>
                </p>
            </form>
        </div>
        <br />
    </div>

</div>