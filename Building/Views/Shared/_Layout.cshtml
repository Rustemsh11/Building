@using System.Security.Claims;
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Building</title>
   
    
    <style>
        .block-vert-line {
            border-right: 3px solid white;
            padding-right: 10px;
        }

        #profile {
            position: relative;
            top: 12px;
            left: 0px;
        }

        #exit {
            position: absolute;
            bottom: 20px;
            right: 20px;
        }

        

        
        

        
    </style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    @*<link rel="stylesheet" href="/resources/demos/style.css">*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MainProrab.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Building.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />
    
</head>
<body>
    
        
    
    <header >

        <nav class="navbar navbar-primary bg-primary fixed-top ">
            <div class="container-fluid">

                    <div class="col block-vert-line">
                        <h3 class="text-center">Снабжение   </h3>

                    </div>


                    <div class="col-6 block-vert-line">
                        <h3 class="text-center">ООО ГазСтройСервис</h3>
                        
                    </div>

                    <div class="col">
                        
                            <div class="row">
                                <div class="col text-center">

                                    <h3>@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.Surname).Value</h3>                                   
                                
                                </div>
                                <div class="col-2">
                               

                                    <button type="button" class="btn btn-outline-primary" id="profile" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                               
                                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" color="white" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                                            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                                        </svg>
                                     </button>

                                    <div class="offcanvas offcanvas-end bg-primary" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                                        <div class="offcanvas-header">
                                            <h3 class="offcanvas-title text-center" id="offcanvasNavbarLabel">@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.Surname).Value</h3>
                                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                        </div> 
                                        <div class="offcanvas-body">
                                            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                        @if (User.IsInRole("Прораб"))
                                        {
                                            
                                            <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="Main">Главная</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="Profile" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Мой профиль</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="BuildingSite" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Объект</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="GetDelivered" asp-route-idProrab="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Доставленные заявки</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="GetMpz" asp-route-prorabId="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">МПЗ</a>
                                                </li>
                                        }
                                        @if (User.IsInRole("Снабженец"))
                                        {

                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="Main">Главная</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="Profile" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Мой профиль</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="CreateOrder">Создать заказ</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="GetSnabQueries" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Мои заказы</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="CreateDoc" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Создать документ для запроса</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="GetDeliveredOrder" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Доставленные заявки</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="GetRefuteOrder" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Опровергнутые заявки</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-conroller="Snab" asp-action="ObjectInfo">Объекты</a>
                                            </li>
                                        }
                                        @if (User.IsInRole("Директор"))
                                        {
                                            
                                            <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="Main">Главная</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="Profile" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Мой профиль</a>
                                                </li>
                                                <li class="nav-item">
                                                <a class="nav-link active text-light" aria-current="page" asp-action="GetNoAgreementQuery">Заявки на согласование</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="GetDelivered" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">Доставленные заявки</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active text-light" aria-current="page" asp-action="GetMpz" asp-route-id="@User.Claims.FirstOrDefault(c=>c.Type==ClaimTypes.NameIdentifier).Value">МПЗ</a>
                                                </li>
                                        }
                                            </ul>
                                        </div>
                                        <form>
                                            <button class="btn btn-outline-light border border-light " id="exit" asp-action="LogOut" asp-controller="Authentication">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                                    <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                                </svg> Выйти
                                            </button>
                                        </form>
                                    </div>
                                    
                                </div>

                            </div>

                    </div>
            </div>
           
        </nav>

    </header>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
