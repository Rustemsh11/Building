@{
    Layout = null;
}
@model Building.Domain.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Building.styles.css" asp-append-version="true" />
    <style type="text/css">
        body{
            margin:0;
            padding:0;
            box-sizing:border-box;
            width:100%;
            height:100vh;
            background: url('../images/стройкаsd.png');
            background-size: cover;
            background-position: center;
            
        }
    </style>
    
</head>
<body>

    
    <div class="container-fluid h-20 p-2 bg-primary text-white">
        <h1 class="text-center">ООО "ГазСтройСервис"</h1>
    </div>
    
    <div class="container col-md-3   position-absolute top-50 start-50 translate-middle p-5 my-5 bg-primary bg-opacity-75 text-white rounded ">
        

    <form asp-controller="Authentication" asp-action="Login" method="post">
        <h1 class="text-center">Авторизация</h1>
            
    
            <div class="mb-3 mt-3">
                <h4>Логин: </h4>

                <input type="text" class="form-control" asp-for="Login" placeholder="Enter login" >
            </div>
            <div class="mb-3">
                <h4>Пароль: </h4>
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" >
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="remember"> Запомнить
                </label>
            </div>
            <br/>
            <div class="mb-3">
            <button type="submit" class="btn btn-light text-primary position-absolute bottom-0 start-50 translate-middle "><h4>Войти</h4></button>
            </div>
    </form>
        @*}*@
        </div>

    
    
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>