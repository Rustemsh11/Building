@model Building.Domain.ViewModel.BuildingSiteViewModel

<style>
    label {
        padding-left: 15px;
        font-size: medium;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=text]:focus {
            border: 3px solid #1E90FF;
        }
    input[type=file] {
        width: 100%;
        height: 49px;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=text]:focus {
            border: 3px solid #1E90FF;
        }

    .selectedList {
        width: 100%;
        height: 49px;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        .selectedList:focus {
            border: 3px solid #1E90FF;
        }

    input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=password]:focus {
            border: 3px solid #1E90FF;
        }

    input[type=date] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 3px solid #ccc;
        -webkit-transition: 0.5s;
        transition: 0.5s;
        outline: none;
        background: #E0FFFF;
    }

        input[type=date]:focus {
            border: 3px solid #1E90FF;
        }


    #back {
        position: relative;
        top: 30px
    }

    #title {
        position: relative;
        left: 190px
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col">

            <h2 class="display-5" id="title">Добавление новой площадки</h2>

        </div>
    </div>
    <hr class="border border-primary border-2 opacity-75">
    <br />
    <div class="row">

        <div class="col-1"></div>

        <div class="col-10 border border-2 border-primary rounded-3">
            <br />
            <form asp-action="AddNewSite" asp-controller="Director" enctype="multipart/form-data" method="post">
                <div style="margin: 15px;">

                    <br />
                    <div class="row">

                        <div class="col">

                            <p>
                                <label asp-for="Name">Наименование</label><br />
                                <input type="text" asp-for="Name" />
                            </p>
                        </div>
                        <div class="col">

                            <p>
                                <label asp-for="Address">Адрес</label><br />
                                <input type="text" asp-for="Address" />
                            </p>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col">
                            <p>
                                <label asp-for="Photo">Фото</label><br />
                                <input type="file" class="form-control text-center" name="postedFiles" multiple />
                            </p>
                        </div>
                        <div class="col">
                            <p>
                                <label asp-for="Deadline">Срок сдачи</label><br />
                                <input type="date" asp-for="Deadline" />
                            </p>
                        </div>
                        <div class="col">
                            <p>
                                
                                 <label asp-for="ProrabName">Ответственный прораб</label><br />
                                @Html.DropDownListFor(model => model.ProrabName, (SelectList)ViewBag.Prorab, "Выбрать...", new { @class = "selectedList form-control"})
                            </p>
                        </div>
                    </div>
                    
                        
                   

                    <br />
                    <p class="text-center">
                        <input type="submit" class="btn btn-outline-primary border border-1 border-primary" value="Сохранить" />
                    </p>
                </div>
            </form>
        </div>
    </div>

</div>